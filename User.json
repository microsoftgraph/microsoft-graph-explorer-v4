{
    "type": "AdaptiveCard",
    "version": "1.0",
    "$odata.type": "#microsoft.graph.user",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "https://graph.microsoft.com/v1.0/users/{mail}/photo/$value",
                            "style": "Person",
                            "size": "Small"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "{displayName}"
                        },
                        {
                            "type": "Container",
                            "spacing": "Small",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "{toUpper(jobTitle)}",
                                    "spacing": "Small"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "{officeLocation}",
                                    "spacing": "None"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "{$data}",
                                    "$data": "{businessPhones}",
                                    "spacing": "None"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": "{mail}",
                                    "spacing": "None"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}