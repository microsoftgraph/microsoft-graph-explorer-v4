{
    "type": "AdaptiveCard",
    "version": "1.4",
    "@odata.type": "#microsoft.graph.group",
    "body": [        
        {
            "type": "Container",
            "$data": "${value}",
            "items": [
                {
                    "type": "TextBlock",
                    "weight": "bolder",
                    "text": "${displayName}"
                },
                {
                    "type": "Container",
                    "spacing": "small",
                    "items": [
                        {
                            "type": "TextBlock",
                            "$when": "${jobTitle != $null}",
                            "text": "${toUpper(jobTitle)}",
                            "spacing": "small"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${officeLocation}",
                            "spacing": "None"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${mail}",
                            "spacing": "None"
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}