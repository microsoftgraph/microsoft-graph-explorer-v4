{
    "type": "AdaptiveCard",
    "version": "1.4",
    "@odata.type": "#microsoft.graph.group",
    "body": [
        {
            "type": "ColumnSet",
            "$data": "${value}",
            "columns": [
                {
                    "width": "stretch",
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "${displayName}",
                            "size": "medium",
                            "weight": "bolder"
                        },
                        {
                            "type": "TextBlock",
                            "text": "${description}",
                            "spacing": "Small",
                            "wrap": true,
                            "maxLines": 2
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "ActionSet",
                            "actions": [
                                {
                                    "type": "Action.OpenUrl",
                                    "$when": "${mail != $null}",
                                    "title": "ðŸ“©",
                                    "url": "mailto:${mail}"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json"
}