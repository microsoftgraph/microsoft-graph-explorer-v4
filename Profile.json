{
    "type": "AdaptiveCard",
    "@odata.type": "#microsoft.graph.user",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [
                        {
                            "type": "Image",
                            "altText": "",
                            "url": "https://graph.microsoft.com/v1.0/users/{mail}/photo/$value",
                            "style": "person",
                            "size": "medium"
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "auto",
                    "items": [        
                        {
                            "type": "TextBlock",
                            "size": "large",
                            "weight": "bolder",
                            "text": "${displayName}"
                        },
                        {
                            "type": "FactSet",
                            "facts": [
                                {
                                    "title": "Given name",
                                    "value": "${givenName}"
                                },
                                {
                                    "title": "Surname",
                                    "value": "${surname}"
                                },
                                {
                                    "title": "Job title",
                                    "value": "${jobTitle}"
                                },
                                {
                                    "title": "Office location",
                                    "value": "${officeLocation}"
                                },
                                {
                                    "title": "Email",
                                    "value": "${mail}"
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0"
}